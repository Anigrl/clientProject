<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script>
        function getData(str) {
            var xmlhttp = new XMLHttpRequest();
            xmlhttp.onreadystatechange = function () {
                if (this.readyState == 4) {
                    console.log(this.responseText)
                    let data = JSON.parse(this.responseText)
                    updateTable(data)
                    //  alert( this.responseText);
                }
            };
            xmlhttp.open("GET", "http://localhost:5000/getdata?num=" + str, true);
            xmlhttp.send();
        }

        function updateTable(data) {
            let tableBody = document.querySelector('tbody');
            tableBody.innerHTML = '';  // Clear existing table data

            data.forEach(element => {
                let row = `<tr class="text-bg">
                    <td class="px-6 py-4 odd:bg-slate-300 even:bg-gray-700 odd:text-bg even:text-neutral">${element.SrNo}</td>
                    <td class="px-6 py-4 odd:bg-slate-300 even:bg-gray-700 odd:text-bg even:text-neutral">${element.Topic}</td>
                    <td class="px-6 py-4 odd:bg-slate-300 even:bg-gray-700 odd:text-bg even:text-neutral">${element.Content}</td>
                    <td class="px-6 py-4 odd:bg-slate-300 even:bg-gray-700 odd:text-bg even:text-neutral">${element.Decscription }</td>
                    <td class="px-6 py-4 odd:bg-slate-300 even:bg-gray-700 odd:text-bg even:text-neutral">${element.Source}</td>
                    <td class="px-6 py-4 flex justify-between gap-6">
                        <a href="/edit" class="px-4 py-2 bg-slate-600 rounded-sm text-slate-300">edit</a>
                        <a href="/delete" class="px-4 py-2 bg-bg rounded-sm text-neutral">delete</a>
                    </td>
                   </tr>`;
                tableBody.insertAdjacentHTML('beforeend', row);
            });
        }

    </script>
</head>

<body>

    <%-include('nav')-%>



        <div class="overflow-x-auto overflow-y-auto max-h-[80vw] sticky top-0 shadow-lg sm:rounded-lg mx-4 mt-12 mb-12 bg-slate-300 ">
            <section class="p-4 w-full sticky top-0 bg-inherit ">
                <form method="" class="flex justify-between items-center  ">

                    <div>
                        <select name="page" id="page" onchange="getData(this.value)">
                            <option value="10">10</option>
                            <option value="20">20</option>
                            <option value="30">30</option>
                            <option value="40">40</option>
                            <option value="50">50</option>
                            <option value="60">60</option>
                            <option value="70">70</option>
                            <option value="80">80</option>
                            <option value="90">90</option>
                            <option value="100">100</option>
                            <option value="150">150</option>
                        </select>
                        <span>select</span>

                    </div>
                    <div>
                        <input type="text" placeholder="search" name="search" class="p-2 rounded-sm focus:border-none">
                    </div>
                </form>
            </section>
            <table class="text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400 w-full border-collapse"
                style="table-layout: fixed;">
                <thead class="text-xs text-gray-900 uppercase bg-gray-50 ">
                    <tr>
                                <th scope="col" class="px-6 py-3 w-1/12 ">Srno</th>
                                <th scope="col" class="px-6 py-3 w-1/6 ">Topic</th>
                                <th scope="col" class="px-6 py-3 w-1/6 ">Content</th>
                                <th scope="col" class="px-6 py-3 w-1/3 ">Decscription</th>
                                <th scope="col" class="px-6 py-3 w-1/12 ">Source</th>
                                <th scope="col" class="px-6 py-3 w-1/6 ">Action</th>
                    </tr>
                </thead>
                <tbody class="text-sm">

                    <% data.forEach(element=> { %>
                        <tr class="text-bg  " >

                            <td class="px-6 py-4 border-black odd:bg-slate-300 even:bg-gray-700 odd:text-bg even:text-neutral ">
                                <%=element.SrNo %>
                            </td>
                            <td class="px-6 py-4 odd:bg-slate-300 even:bg-gray-700 odd:text-bg even:text-neutral hover:scale-125 transition-all">
                                <%=element.Topic %>
                            </td>
                            <td class="px-6 py-4 odd:bg-slate-300 even:bg-gray-700 odd:text-bg even:text-neutral ">
                                <%=element.Content %>
                            </td>
                            <td class="px-6 py-4 odd:bg-slate-300 even:bg-gray-700 odd:text-bg even:text-neutral hover:scale-125 transition-all duration-200">
                                <%=element.Decscription %>
                            </td>
                            <td class="px-6 py-4 odd:bg-slate-300 even:bg-gray-700 odd:text-bg even:text-neutral ">
                                <%=element.Source %>
                            </td>

                            <td class="px-6 py-4 flex justify-between gap-6">
                                <a href="/edit/?sr=<%= element.SrNo %>" class="px-4 py-2 bg-slate-600 rounded-sm text-slate-300">edit</a>


                                <a href="/delete" class="px-4 py-2 bg-neutral rounded-sm text-bg">delete</a>
                            </td>
                        </tr>

                        <% }) %>


                </tbody>
            </table>
        </div>

